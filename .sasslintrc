files:
  include: 'src/**/*.scss'
syntax:
    include:
      - scss
rules:
  # flexiablity
  placeholder-in-extend: 0
  no-color-literals: 0
  no-color-keywords: 0
  no-transition-all: 0
  force-pseudo-nesting: 0
  force-element-nesting: 0
  force-attribute-nesting: 0
  shorthand-values: 0
  no-qualifying-elements: 0

  # error reduction
  declarations-before-nesting: 2
  mixins-before-declarations: 2
  no-important: 2
  no-duplicate-properties: 2
  space-around-operator:
    - 2
    - include: false

  # style syncing
  no-color-hex: 2

  # readability
  empty-line-between-blocks: 2
  property-sort-order:
    - 2
    - order: 'concentric'
  empty-args:
    - 2
    - include: true
  leading-zero:
    - 2
    - include: true

  # styles
  quotes: 2

  # Name formates
  class-name-format:
    - 2
    -
      convention: 'snakecase'
      ignore:
        - enterActive
        - enterDone
        - exitActive
        - exitDone
  function-name-format:
    - 2
    - convention: 'snakecase'
  id-name-format:
    - 2
    - convention: 'snakecase'
  mixin-name-format:
    - 2
    - convention: 'snakecase'
  placeholder-name-format:
    - 2
    - convention: 'snakecase'
  variable-name-format:
    - 2
    - convention: 'snakecase'
